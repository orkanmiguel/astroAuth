---
const { isLoggedIn } = Astro.locals;
---

<nav class="flex justify-between px-20 py-10 items-center bg-white">
    <h1 class="text-xl text-gray-800 font-bold">Astro Auth</h1>
    <div class="flex items-center">
     
      <ul class="flex items-center space-x-6">
        <li class="font-semibold text-gray-700"><a href="/">Home</a></li>
        
        {
          !isLoggedIn ? (<li class="font-semibold text-gray-700"><a href="/login">ingresar</a></li>) : ( <li class="font-semibold text-gray-700"><a href="/protected">protegido</a></li>
                 <li id="logout" class="font-semibold text-gray-700" ><a href="/#">Salir</a></li>)
        }
        

        <li>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M12 14l9-5-9-5-9 5 9 5z" />
            <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
          </svg>
        </li>

      </ul>
    </div>
  </nav>

  <script>
import { actions } from "astro:actions";

    const logoutElem = document.querySelector('#logout') as HTMLLIElement;

    logoutElem?.addEventListener('click', () => {
      actions.logout();
      window.location.href = '/';
    })
  </script>